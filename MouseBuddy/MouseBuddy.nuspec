<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
	<metadata>
		<id>MouseBuddy</id>
		<version>1.0.6</version>
		<title>MouseBuddy</title>
		<authors>dmanning23</authors>
		<owners>dmanning23</owners>
		<projectUrl>https://github.com/dmanning23/MouseBuddy</projectUrl>
		<licenseUrl>https://github.com/dmanning23/MouseBuddy/blob/master/LICENSE.txt</licenseUrl>
		<requireLicenseAcceptance>false</requireLicenseAcceptance>
		<description>A MonoGame component for doing simple mouse interaction</description>
		<releaseNotes />
		<copyright>Copyright 2016</copyright>
		<tags>pcl, windows phone, winphone, android, ios, windows universal, monogame</tags>
		<dependencies>

			<!--Xamarin.Android-->
			<group targetFramework="MonoAndroid10">
				<dependency id="MonoGame.Framework.Android" version="3.5"/>
				<dependency id="FilenameBuddy" version="1.0.1"/>
				<dependency id="InputHelper" version="1.0.1"/>
				<dependency id="StateMachineBuddy" version="1.0"/>
				<dependency id="PrimitiveBuddy" version="1.0"/>
			</group>

			<!--Xamarin.iOS Unified-->
			<group targetFramework="Xamarin.iOS10">
				<dependency id="MonoGame.Framework.iOS" version="3.5"/>
				<dependency id="FilenameBuddy" version="1.0.1"/>
				<dependency id="InputHelper" version="1.0.1"/>
				<dependency id="StateMachineBuddy" version="1.0"/>
				<dependency id="PrimitiveBuddy" version="1.0"/>
			</group>

			<!--Win Universal-->
			<group targetFramework="uap10.0">
				<dependency id="MonoGame.Framework.WindowsUniversal" version="3.5"/>
				<dependency id="Microsoft.NETCore.UniversalWindowsPlatform" version="5.1"/>
				<dependency id="FilenameBuddy" version="1.0.1"/>
				<dependency id="InputHelper" version="1.0.1"/>
				<dependency id="StateMachineBuddy" version="1.0"/>
				<dependency id="PrimitiveBuddy" version="1.0"/>
			</group>

			<group targetFramework="net451">
				<dependency id="MonoGame.Framework.DesktopGL" version="3.5"/>
				<dependency id="FilenameBuddy" version="1.0.1"/>
				<dependency id="InputHelper" version="1.0.1"/>
				<dependency id="StateMachineBuddy" version="1.0"/>
				<dependency id="PrimitiveBuddy" version="1.0"/>
			</group>

		</dependencies>
	</metadata>
	<files>

		<!--Xamarin.Android-->
		<file src="MouseBuddy.Android\bin\Release\MouseBuddy.Android.pdb" target="lib\MonoAndroid10\MouseBuddy.Android.pdb" />
		<file src="MouseBuddy.Android\bin\Release\MouseBuddy.Android.dll" target="lib\MonoAndroid10\MouseBuddy.Android.dll" />

		<!--Xamarin.iOS Unified-->
		<file src="MouseBuddy.iOS\bin\Release\MouseBuddy.iOS.pdb" target="lib\Xamarin.iOS10\MouseBuddy.iOS.pdb" />
		<file src="MouseBuddy.iOS\bin\Release\MouseBuddy.iOS.dll" target="lib\Xamarin.iOS10\MouseBuddy.iOS.dll" />

		<!--Windows Universal-->
		<file src="MouseBuddy.WindowsUniversal\bin\Release\MouseBuddy.WindowsUniversal.pdb" target="lib\uap10.0\MouseBuddy.WindowsUniversal.pdb" />
		<file src="MouseBuddy.WindowsUniversal\bin\Release\MouseBuddy.WindowsUniversal.dll" target="lib\uap10.0\MouseBuddy.WindowsUniversal.dll" />

		<!--DesktopGL-->
		<file src="MouseBuddy.DesktopGL\bin\Release\MouseBuddy.DesktopGL.pdb" target="lib\net451\MouseBuddy.DesktopGL.pdb" />
		<file src="MouseBuddy.DesktopGL\bin\Release\MouseBuddy.DesktopGL.dll" target="lib\net451\MouseBuddy.DesktopGL.dll" />

	</files>
